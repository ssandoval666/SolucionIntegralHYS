<!-- Button trigger modal -->
<!-- Modal -->
<div class="modal fade" id="ModalVideoIncendio" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Simulacro de Incendio
                </h4>
                <button type="button" class="close" onclick="javascript:$('video').each(function(){$(this).get(0).pause();});" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="@(Settings.Theme.IconPrefix) fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <video width="320" height="240" controls="controls">
                    <source src="~/capacitaciones/videos/simulacro%20de%20incendio.mp4" type="video/mp4" />
                </video>
            </div>
        </div>
    </div>
</div>

